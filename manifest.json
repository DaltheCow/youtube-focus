{
  "manifest_version": 2,
  "name": "youtube-focus",
  "version": "1.0",
  "description": "An extension to help keep you from wasting time on youtube",
  "page_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["https://www.youtube.com*"],
      "js": ["content.js"]
    }
  ],
  "options_page": "options.html",

  "permissions": [
    "storage"
  ]
}
